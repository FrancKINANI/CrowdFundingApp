@model Category

<h2>Category Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<h3>Associated Projects</h3>
@if (Model.Projects != null && Model.Projects.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>
                        <a asp-action="Details" asp-controller="Project" asp-route-id="@project.ProjectId" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No projects associated with this category.</p>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
