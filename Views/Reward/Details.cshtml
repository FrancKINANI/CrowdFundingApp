@model Reward

@{
    ViewData["Title"] = "Details of the reward";
}

<h2>Details of the reward</h2>

<div>
    <h4>Reward</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Montant minimum de contribution</dt>
        <dd class="col-sm-10">@Model.MinimumContribution</dd>
        <dt class="col-sm-2">Projet</dt>
        <dd class="col-sm-10">@Model.Project?.Title</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RewardId">Edit</a> |
    <a asp-action="Index">Back to the list</a>
</div>
