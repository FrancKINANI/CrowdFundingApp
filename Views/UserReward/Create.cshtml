@{
}

@model UserReward

@{
    ViewData["Title"] = "Create a new award";
}

<h2 class="text-center">Create a new award</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="UserId" class="control-label">Username</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        @* <span asp-validation-for="UserId" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="RewardId" class="control-label">Reward</label>
        <select asp-for="RewardId" class="form-control" asp-items="ViewBag.RewardId"></select>
        @* <span asp-validation-for="RewardId" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="DateAwarded" class="control-label">Grant Date</label>
        <input asp-for="DateAwarded" class="form-control" type="date" />
        @* <span asp-validation-for="DateAwarded" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <input type="submit" asp-controller="UserReward" value="Add" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-primary mb-3">Back to the list</a>
