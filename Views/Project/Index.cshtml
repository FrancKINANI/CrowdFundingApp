@{
}

@model List<Project>

@{
    ViewData["Title"] = "Liste des Projets";
}

<h2 class="text-center">List of projects</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create a new project</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Goal</th>
            <th>Current Amount</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Creator</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Title</td>
                <td>@project.Description</td>
                <td>@project.GoalAmount</td>
                <td>@project.CurrentAmount</td>
                <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@project.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@project.User.Username</td>
                <td>@project.Category.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
