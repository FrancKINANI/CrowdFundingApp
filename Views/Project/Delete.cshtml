

@{
    ViewData["Title"] = "Delete the project";
}

@model CrowdFundingApp.Models.Project

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-3xl font-bold mb-6">Delete Project</h1>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            <p class="font-bold">Warning!</p>
            <p>Are you sure you want to delete this project? This action cannot be undone.</p>
        </div>

        <div class="mb-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-48 object-cover rounded mb-4"/>
            }

            <dl class="grid grid-cols-1 gap-4">
                <div>
                    <dt class="text-gray-600">Title</dt>
                    <dd class="font-semibold">@Model.Title</dd>
                </div>
                <div>
                    <dt class="text-gray-600">Description</dt>
                    <dd>@Model.Description</dd>
                </div>
                <div>
                    <dt class="text-gray-600">Goal Amount</dt>
                    <dd class="font-semibold">@Model.GoalAmount.ToString("C")</dd>
                </div>
                <div>
                    <dt class="text-gray-600">Current Amount</dt>
                    <dd class="font-semibold">@Model.CurrentAmount.ToString("C")</dd>
                </div>
                <div>
                    <dt class="text-gray-600">Category</dt>
                    <dd>@Model.Category?.Name</dd>
                </div>
                <div>
                    <dt class="text-gray-600">Status</dt>
                    <dd>@Model.Status</dd>
                </div>
            </dl>
        </div>

        <form asp-action="Delete" class="flex items-center justify-between">
            <input type="hidden" asp-for="ProjectId" />
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Delete
            </button>
            <a asp-action="Index" class="text-blue-500 hover:text-blue-800">Back to List</a>
        </form>
    </div>
</div>
