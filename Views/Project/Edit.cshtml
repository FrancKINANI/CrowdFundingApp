

@{
    ViewData["Title"] = "Edit the project";
}

@model CrowdFundingApp.ViewModels.ProjectViewModel

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-3xl font-bold mb-6">Edit Project</h1>

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProjectId" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-4">
                    <img src="@Model.ImageUrl" alt="Current Project Image" class="w-full h-48 object-cover rounded mb-2" />
                    <p class="text-sm text-gray-600">Current project image</p>
                </div>
            }

            <div class="mb-4">
                <label asp-for="Title" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <textarea asp-for="Description" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="GoalAmount" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="GoalAmount" type="number" step="0.01" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="GoalAmount" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="StartDate" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="StartDate" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="StartDate" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="EndDate" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="EndDate" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="EndDate" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CategoryId" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ImageFile" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="ImageFile" type="file" accept="image/*" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="ImageFile" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Save Changes
                </button>
                <a asp-action="Index" class="text-blue-500 hover:text-blue-800">Back to List</a>
            </div>
        </form>
    </div>
</div>
