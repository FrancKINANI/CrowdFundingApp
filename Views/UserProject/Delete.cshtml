@model Project

@{
    ViewData["Title"] = "Delete the project";
}

<h2>Delete the project</h2>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Goal amount</dt>
        <dd class="col-sm-10">@Model.GoalAmount</dd>
        <dt class="col-sm-2">Current Amount</dt>
        <dd class="col-sm-10">@Model.CurrentAmount</dd>
        <dt class="col-sm-2">Start date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">End date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ProjectId" />
        <div class="form-group">
            <input type="submit" asp-route-projectid="ProjectId" value="Delete" class="btn btn-danger btn-sm" /> |
            <a asp-action="Index" class="btn btn-sm">Back to the list</a>
        </div>
    </form>
</div>
