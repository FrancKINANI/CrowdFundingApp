@model Contribution

@{
    ViewData["Title"] = "Edit the Contribution";
}

<h2>Edit the Contribution</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContributionDate" class="control-label"></label>
        <input asp-for="ContributionDate" class="form-control" type="date" />
        <span asp-validation-for="ContributionDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectId" class="control-label"></label>
        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ContributionId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary btn-sm" />
    </div>
</form>

<a asp-action="Index" class="btn btn-sm">Back to the list</a>
