@model Contribution

@{
    ViewData["Title"] = "Delete the Contribution";
}

<h2>Delete the Contribution</h2>

<h3>Are you sure you want to delete this contribution?</h3>
<div>
    <h4>Contribution</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
        <dt class="col-sm-2">Date of contribution</dt>
        <dd class="col-sm-10">@Model.ContributionDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.User?.UserName</dd>
        <dt class="col-sm-2">Projet</dt>
        <dd class="col-sm-10">@Model.Project?.Title</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ContributionId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
            <a asp-action="Index" class="btn btn-sm">Back to the list</a>
        </div>
    </form>
</div>
