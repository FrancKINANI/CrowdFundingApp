@{
}

@model List<User>

@{
    ViewData["Title"] = "List of users";
}

<h2 class="text-center">List of users</h2>

<p>
    <a href="@Url.Action("Create", "User")" class="btn btn-primary mb-3">Create a new user</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Date of creation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Details", "User", new { id = user.UserId })" class="btn btn-info">Details</a> |
                    <a href="@Url.Action("Edit", "User", new { id = user.UserId })" class="btn btn-warning">Edit</a> |
                    <a href="@Url.Action("Delete", "User", new { id = user.UserId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

